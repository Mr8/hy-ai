{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "./dist",
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
        "allowJs": false,
        "moduleResolution": "node",
        "jsx": "react",
        "noEmitOnError": true,
        "traceResolution": false,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}